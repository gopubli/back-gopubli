# Exemplo de Configuração .env para GoPubli API

# ===========================================
# CONFIGURAÇÕES BÁSICAS
# ===========================================

APP_NAME=GoPubli
APP_ENV=local
APP_KEY=base64:... # Gerado pelo artisan key:generate
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:8000

# URL do frontend (para links em e-mails)
APP_FRONTEND_URL=http://localhost:3000

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ===========================================
# CONFIGURAÇÕES DE E-MAIL
# ===========================================

# DESENVOLVIMENTO - Mailtrap (Recomendado)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=seu_username_mailtrap
MAIL_PASSWORD=sua_senha_mailtrap
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@gopubli.com"
MAIL_FROM_NAME="${APP_NAME}"

# PRODUÇÃO - Exemplo com SendGrid
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=sua_api_key_sendgrid
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@gopubli.com"
# MAIL_FROM_NAME="${APP_NAME}"

# PRODUÇÃO - Exemplo com AWS SES
# MAIL_MAILER=ses
# AWS_ACCESS_KEY_ID=sua_access_key
# AWS_SECRET_ACCESS_KEY=sua_secret_key
# AWS_DEFAULT_REGION=us-east-1
# MAIL_FROM_ADDRESS="noreply@gopubli.com"
# MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ===========================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gopubli_back
DB_USERNAME=root
DB_PASSWORD=

# ===========================================
# CONFIGURAÇÕES DE SESSÃO E CACHE
# ===========================================

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# ===========================================
# CONFIGURAÇÕES DE LOG
# ===========================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ===========================================

# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Tempo de expiração do token de reset de senha (em minutos)
PASSWORD_RESET_TIMEOUT=60

# Tempo de expiração do link de verificação de e-mail (em minutos)
EMAIL_VERIFICATION_TIMEOUT=60

# ===========================================
# STORAGE E UPLOAD
# ===========================================

# Tamanho máximo de upload em KB (padrão: 2048 = 2MB)
MAX_UPLOAD_SIZE=2048

# Formatos permitidos para avatar
ALLOWED_AVATAR_FORMATS=jpeg,png,jpg,gif

# Formatos permitidos para logo
ALLOWED_LOGO_FORMATS=jpeg,png,jpg,gif,svg

# ===========================================
# SEGURANÇA
# ===========================================

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5

# CORS - Domínios permitidos (separados por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# SERVIÇOS EXTERNOS (Opcional)
# ===========================================

# AWS S3 (para produção - storage de imagens)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (para notificações em tempo real)
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# Vite (para desenvolvimento frontend)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ===========================================
# NOTAS IMPORTANTES
# ===========================================

# 1. Nunca commite este arquivo .env no Git
# 2. Use variáveis de ambiente diferentes para dev/staging/production
# 3. Gere uma nova APP_KEY com: php artisan key:generate
# 4. Configure o e-mail antes de testar recuperação de senha
# 5. Em produção, configure AWS S3 ou similar para storage
# 6. Sempre use HTTPS em produção
# 7. Configure rate limiting apropriado para produção
